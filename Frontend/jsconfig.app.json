{
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "./src/*"
        ]
      },
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "src/**/*"],
    "exclude": ["node_modules", "build", "dist", ".git", "public"]
  }